<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= "#{controller.controller_name}-#{controller.action_name}" %>'>
  <header class="header">
    <div class="header__title">
      <div class="header__logo">
        <img class="header__logo-img" src="<%= image_path('home/logo.jpg') %>" alt="ロゴ">
      </div>
      <h2 class="header__catch">mini blog</h2>
    </div>
    <nav class="header__nav">
      <ul class="header__menus">
        <% if @current_user %>
        <li>
          <%= @current_user.name %>
        </li>
        <% end %>
        <li>
          <%= link_to("ホーム", "/") %>
        </li>
        <li>
          <%= link_to("投稿一覧", "/posts/index") %>
        </li>
        <li>
          <%= link_to("新規投稿", "/posts/new") %>
        </li>
        <li>
          <%= link_to("ユーザー", "/users/index") %>
        </li>
        <li>
          <%= link_to("新規登録", "/signup") %>
        </li>
        <!-- getメソッドでloginアクションを走らせる -->
        <li>
          <%= link_to("ログイン", "/login") %>
        </li>
        <li>
          <%= link_to("ログアウト", "/logout", {method: :post}) %>
        </li>
      </ul>
        </nav>
  </header>
  <!-- flash[:notice]に代入されたメッセージを表示 -->
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  <footer class="footer">
    © 2020 mini blog
  </footer>
  </body>
</html>
