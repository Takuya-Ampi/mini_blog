<div class="main">
  <div class="container">
    <p>ユーザー詳細ページ</p>
    <%= @user.name %>
    <% if @user.id == @current_user.id %>
      <%= @user.email %>
    <% end %>
    <div class="users-menu">
        <%# @userのidとセッションid(=@current_user.id)が等しい時リンク先を表示 %>
        <% if @user.id == @current_user.id %>
          <%= link_to("編集", "/users/#{@user.id}/edit") %>
          <%= link_to("削除", "/users/#{@user.id}/destroy", {method:"post"}) %>
        <% end %>
      </div>
    </div>
</div>
